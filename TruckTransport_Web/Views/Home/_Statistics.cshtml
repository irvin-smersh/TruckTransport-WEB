@model GetStatisticsVM

<div id="statistics-partial">
    <div class="box box-danger">
        <div class="box-header">
            <h3 class="text-center">@SiteResources.Statistics</h3>
        </div>
        <div class="box-body">
            <div class="col-md-6">
                <!-- small box -->
                <div class="columns small-box bg-orange-active">
                    <div class="inner">
                        <h3>@Model.NumberOfDrivers</h3>
                        <p>@SiteResources.NumberOfDrivers</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person"></i>
                    </div>
                    <a href="@Url.Action("Index", "Drivers")" class="columns small-box-footer">@SiteResources.MoreInfo <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-md-6">
                <!-- small box -->
                <div class="columns small-box bg-orange-active">
                    <div class="inner">
                        <h3>@Model.NumberOfVehicles</h3>
                        <p>@SiteResources.NumberOfVehicles</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="@Url.Action("Index", "Vehicles")" class="columns small-box-footer">@SiteResources.MoreInfo <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-md-6">
                <!-- small box -->
                <div class="columns small-box bg-red">
                    <div class="inner">
                        <h3>@Model.NumberOfFinishedOrders</h3>
                        <p>@SiteResources.NumberOfFinishedOrders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-ios-pricetags"></i>
                    </div>
                    <a href="@Url.Action("Index", "Orders")" class="columns small-box-footer">@SiteResources.MoreInfo <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-md-6">
                <!-- small box -->
                <div class="columns small-box bg-red">
                    <div class="inner">
                        <h3>@Model.NumberOfFinishedTasks</h3>
                        <p>@SiteResources.NumberOfFinishedTasks</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="@Url.Action("Index", "Tasks")" class="columns small-box-footer">@SiteResources.MoreInfo <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
    </div>
</div>
